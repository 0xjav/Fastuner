# Fastuner Environment Configuration
# Copy this file to .env and update with your actual values from Terraform outputs

# Database (SQLite for V0)
DATABASE_URL=sqlite:///./fastuner.db

# AWS Configuration
# Update these with your actual AWS account details
AWS_REGION=us-west-2
AWS_ACCOUNT_ID=123456789012

# S3 Buckets (from Terraform outputs)
# After running 'terraform apply', copy the bucket names here
S3_DATASETS_BUCKET=fastuner-datasets-xxxxxxxxxxxxx
S3_ADAPTERS_BUCKET=fastuner-adapters-xxxxxxxxxxxxx

# SageMaker (from Terraform outputs)
# Copy the role ARN from terraform output
SAGEMAKER_EXECUTION_ROLE_ARN=arn:aws:iam::123456789012:role/fastuner-sagemaker-execution-role

# API Configuration (optional - only needed if running API server)
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
LOG_LEVEL=INFO

# Deployment TTL (in seconds) - how long before idle endpoints are cleaned up
DEFAULT_TTL_SECONDS=3600

# Environment
ENVIRONMENT=development
